<div class="container">
  <div class="row">
    <div class="col-2">
      <h3>Party info</h3>
    </div>
    <div class="col-10">
      <h3>Tournament</h3>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Title</th>
            <th scope="col">Winner</th>
            <th scope="col">天気</th>
            <th scope="col">コース</th>
          </tr>
        </thead>
        <tbody>
          <% @tournaments.each do |tour| %>
            <tr>
              <td><%= tour.dates.strftime('%Y-%m-%d') %></td>
              <td>
                <%= link_to(tournament_path(tour.id), class:"text-primary") do %>
                <span><%= tour.name %></span>
                <% end %>
              </td>
              <td>竹之下　伸一</td>
              <td>
                晴れ
              <td>
                ザ・クイーンズヒルゴルフクラブ
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>