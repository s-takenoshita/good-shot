<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <div class="form-body p-4">
        <h4><%= @tournament.name %></h4>
        <table class="table">
          <tbody>
            <tr>
              <td>開催日</td>
              <td><%= @tournament.dates.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td>天気</td>
              <td>晴れ</td>
            </tr>
            <tr>
              <td>コース</td>
              <td>ザ・クイーンズヒルゴルフクラブ</td>
            </tr>
            <tr>
              <td>優勝</td>
              <td>竹之下　伸一</td>
            </tr>
          </tbody>
        </table>
        <h4>順位</h4>
        <table class="table">
          <thead class="table-light">
            <tr>
              <th scope="col">順位</th>
              <th scope="col">選手</th>
              <th scope="col">Net</th>
              <th scope="col">Gross</th>
          </tr>
          </thead>
          <tbody>
          
          </tbody>
        </table>

        <div class="row">
          <div class="col-md-4 pl-0">
            <%= link_to "編集", edit_tournament_path(@tournament.id), class:"btn btn btn-success btn-lg btn-block" %>
          </div>
          <div>
            <%= link_to "削除", tournament_path(@tournament.id), class:"btn btn-outline-danger btn-lg", method: :delete %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>